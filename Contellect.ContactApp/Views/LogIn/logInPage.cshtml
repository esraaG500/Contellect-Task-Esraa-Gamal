@model Contellect.ContactApp.Models.User;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>

    <div class="loginDiv">
        <h2>Contellect.ContactApp-LogIn</h2>

        <form asp-action="logInPage" id="loginForm" method="post">
            <div class="imgcontainer">
                <img src="~/img/userIcon.png" alt="userIcon" class="avatar" />
            </div>

            <div class="container">
                <input asp-for="userName" type="text" placeholder="Enter Username" required>
                <span asp-validation-for="userName" class="text-danger"></span>
                <input asp-for="userPassword" type="password" placeholder="Enter Password" required>
                <span asp-validation-for="userPassword" class="text-danger"></span>
                <h5 class="text-danger">@TempData["msg"]</h5>
                <button type="submit">Login</button>
            </div>
        </form>
    </div>
</body>
</html>
